<body>
  <h1>Editing Book</h1>
  <!--エラーメッセージ-->
    <% if @book.errors.any? %>
      <div class="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <!--ここまで-->
    <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
      <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
      </div>
      <div class="field">
      <label for="book_title">Body</label>
      <%= f.text_area :body %>
      </div>
      <div class="actions"><%= f.submit 'Update Book' %></div>
    <% end %>

  <%= link_to "Show", book_path(@book.id) %>  | <%= link_to "Back", books_path %>

</body>